---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { PROJECTS } from "@consts";
import projects from "./_projects.json";
import Project from "@components/Project.astro";
---


<PageLayout title={PROJECTS.TITLE} description={PROJECTS.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white">
        Projects
      </div>
      <ul class="animate flex flex-col gap-4">
        {projects.map((project) => (
          <li class="relative group flex flex-col gap-3 py-4 px-5 rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 transition-colors duration-300 ease-in-out">
            <Project {...project} />
          </li>
        ))}
      </ul>
    </div>
  </Container>
</PageLayout>
